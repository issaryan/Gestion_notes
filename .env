# .env

# Flask settings
FLASK_ENV=development
FLASK_APP=manage.py
SECRET_KEY=super-secret-key-change-this

# Database (MySQL)
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gestion_notes

# SQLAlchemy URI (automatiquement reconstruit dans config.py)
